<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
 	<ImageView 
 	    android:id="@+id/menu_user_logo"
 	    android:layout_width="@dimen/drawer_width"
 	    android:layout_height="@dimen/drawer_width"
 	    />
 	
 	<TextView 
 	    android:id="@+id/menu_user_login"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:textSize="30sp"
 	    android:textStyle="bold"
 	    android:textColor="@color/red"
 	    android:layout_alignParentRight="true"
 	    android:layout_alignParentTop="true"
 	    android:layout_marginRight="10dp"
 	    android:layout_marginLeft="10dp"
 	    android:layout_marginTop="10dp"
 	    />
	
	<TextView 
	   
 	    android:id="@+id/menu_user_email"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:textSize="20sp"
 	    android:textStyle="italic"
 	    android:layout_below="@+id/menu_user_login"
 	    android:layout_alignRight="@+id/menu_user_login"
 	    />
</RelativeLayout>